<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header') %>
<body class="animsition">
    <div class="page-wrapper">
        
    <%- include('../partials/nav') %> 
        <!-- PAGE CONTENT-->
        <div class="page-content--bgf7">
            <br/>

            <!-- Misc-->
            <section class="welcome p-t-10">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="title-4">Brand</h1>
                            
                            <hr class="line-seprate">
                        </div>
                    </div>
                </div>
            </section>
            <!-- Misc end-->
            
            

           
            <!-- DATA TABLE-->
            <section class="p-t-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-data__tool"> 
                                <div class="table-data__tool-left"></div> 
                                <div class="table-data__tool-right">
                                    <a href="/brand"><button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                        brand list</button></a>
                                    
                                </div>
                            </div>

                            <div class="card">
                                <form hx-post="/submitBrand" hx-on::after-request="this.reset()"  hx-target="#confrim" method="post" class="form-horizontal">  
                                <div class="card-header">
                                    <strong>Add Brand</strong>
                                </div>
                                <div id="confrim"></div>
                                <div class="card-body card-block">
                                    
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="hf-email" class=" form-control-label">Brand</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="hf-email" name="brand" placeholder="Enter Brand" class="form-control" required>
                                            </div>
                                        </div>
                                        
                                    
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        Submit
                                    </button>
                                    <button type="reset" class="btn btn-danger btn-sm">
                                        <i class="fa fa-ban"></i> Reset
                                    </button>
                                </div>
                                </form>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </section>
            <!-- END DATA TABLE-->

            <%- include('../partials/footer') %>

</body>

</html>
<!-- end document-->
