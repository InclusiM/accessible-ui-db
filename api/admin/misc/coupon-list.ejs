<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header') %>
<body class="animsition">
    <div class="page-wrapper">
        
    <%- include('../partials/nav') %> 
        <!-- PAGE CONTENT-->
        <div class="page-content--bgf7">
            <br/>

            <!-- Misc-->
            <section class="welcome p-t-10">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="title-4">Coupons</h1>
                            
                            <hr class="line-seprate">
                        </div>
                    </div>
                </div>
            </section>
            <!-- Misc end-->
            
            

           
            <!-- DATA TABLE-->
            <section class="p-t-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-data__tool"> 
                                <div class="table-data__tool-left"></div> 
                                <div class="table-data__tool-right">
                                    <a href="/coupon"><button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                        <i class="zmdi zmdi-plus"></i>add coupon</button></a>
                                    
                                </div>
                            </div>

                            <div class="top-campaign">
                                <h3 class="title-3 m-b-30">coupon list</h3>
                                <div class="table-responsive">
                                    <table class="table table-top-campaign" width='100%'>
                                        <tbody hx-confirm="Are you sure?" hx-target="closest tr" hx-swap="outerHTML swap:1s">
                                            <td><b>Code</b></td><td><b>Percent</b></td><td><b>Expired Date</b></td><td>&nbsp;</td>

                                            <% for (var i = 0; i < couponList.length; i++) {%>
                                                  <% coupon_id = couponList[i]._id %>
                                                  <% expired_date = new Date(couponList[i].expired_on) %>
                                             <tr>
                                                <td> <%= couponList[i].code %></td>
                                                <td> <%= couponList[i].percent %> %</td>
                                                <td> <%= expired_date.getFullYear() %> - <%= expired_date.getMonth()+1 %> - <%= expired_date.getDate() %></td>
                                                <td>
                                                    <a href="/edit-coupon/<%= coupon_id %>"><button class="btn btn-danger">Edit</button></a>
                                                    <button class="btn btn-danger" hx-delete="/delete-coupon/<%= coupon_id %>">Delete</button>
                                                </td>
                                                
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </section>
            <!-- END DATA TABLE-->

            <%- include('../partials/footer') %>

</body>

</html>
<!-- end document-->
